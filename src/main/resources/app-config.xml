<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package="com.javasampleapproach.springprofiles" />

    <bean id="profileIndependentBean" class="com.javasampleapproach.springprofiles.bean.Data">
        <constructor-arg value="++++ This is a PROFILE INDEPENDENT bean!"/>
    </bean>

    <beans profile="another">
        <import resource="classpath:another-common-conf.xml"/>
    </beans>

    <beans profile="default">
        <bean id="dataBean" class="com.javasampleapproach.springprofiles.bean.Data">
            <constructor-arg value="++++ This is a bean in DEFAULT profile"/>
        </bean>
        <import resource="classpath:common-conf.xml"/>
    </beans>

</beans>